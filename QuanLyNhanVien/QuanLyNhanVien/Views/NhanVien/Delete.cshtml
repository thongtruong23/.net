@model QuanLyNhanVien.Models.NhanVien

@{
    ViewBag.Title = "Delete";
    
}

<h2>Xóa nhân viên</h2>

<h3>Bạn có chắc muốn xóa nhân viên này?</h3>
<div>
    <h4>Nhân viên:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Display("Họ và Tên")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoVaTen)
        </dd>

        <dt>
            @Html.Display("Giới tính")
        </dt>

        <dd>
            @(Model.GioiTinh?"Nam":"Nữ")
        </dd>

        <dt>
            @Html.Display("Địa chỉ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
           @Html.Display("Địa chỉ Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.Display("Số điện thoại")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoDienThoai)
        </dd>

        <dt>
            @Html.Display("Số CMND")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CMND)
        </dd>

        <dt>
            @Html.Display("Chức vụ")
        </dt>

        <dd>
            @(Model.ChucVu==null?"":Model.ChucVu.TenChucVu)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <input type="hidden" id="id" value="@Model.Id"/>
        <div class="form-actions no-color">
            <input type="submit" value="Xóa nhân viên" class="btn btn-default" /> |
            @Html.ActionLink("Danh sách nhân viên", "Index")
        </div>
    }
</div>
